<?xml version='1.0' encoding='utf-8'?>
<plugin xmlns="http://apache.org/cordova/ns/plugins/1.0"
        xmlns:android="http://schemas.android.com/apk/res/android"
        id="cordova-plugin-cordovapluginaggregator" version="0.0.1">

  <name>Cordova Plugin Aggregator</name>

  <description>
    Test plugin to test how to reference multiple plugins in one plugin.
  </description>

  <author>Jo√£o Figueiredo</author>

  <license>Unlicense</license>

  <keywords>Cordova Plugin Aggregator</keywords>

  <repo>https://github.com/JFIOutsystems/CordovaPluginAggregator.git</repo>

  <issue>https://github.com/JFIOutsystems/CordovaPluginAggregator/issues</issue>
        
  <preference name="URL_SCHEME" />
  
<engines>
      <engine name="cordova" version=">=3.1.0" />
    </engines>

  
  <dependency id="cordova-plugin-inappbrowser" url="https://github.com/OutSystems/cordova-plugin-inappbrowser" commit="master" version="3.0.0" />
  
  <dependency id="cordova-plugin-app-launcher" url="https://github.com/EduardoJauch/cordova-plugin-app-launcher"  commit="master" version="0.4.0" />
  
  <dependency id="cordova-plugin-customurlscheme" url="https://github.com/EddyVerbruggen/Custom-URL-scheme"  commit="master" version="4.3.0" />

         <!-- ios -->
  <platform name="ios">
    <js-module src="https://github.com/EddyVerbruggen/Custom-URL-scheme/blob/4.3.0/www/ios/LaunchMyApp.js" name="LaunchMyApp">
      <clobbers target="window.plugins.launchmyapp" />
    </js-module>

    <config-file target="*-Info.plist" parent="CFBundleURLTypes">
      <array>
        <dict>
          <key>CFBundleURLSchemes</key>
          <array>
            <string>$URL_SCHEME</string>
          </array>
        </dict>
      </array>
    </config-file>
  </platform>

  <!-- android -->
  <platform name="android">
    <preference name="ANDROID_SCHEME" default=" " />
    <preference name="ANDROID_HOST" default=" " />
    <preference name="ANDROID_PATHPREFIX" default="/" />

    <js-module src="https://github.com/EddyVerbruggen/Custom-URL-scheme/blob/4.3.0/www/android/LaunchMyApp.js" name="LaunchMyApp">
      <clobbers target="window.plugins.launchmyapp" />
    </js-module>

    <config-file target="res/xml/config.xml" parent="/*">
      <feature name="LaunchMyApp">
        <param name="android-package" value="nl.xservices.plugins.LaunchMyApp"/>
      </feature>
    </config-file>

    <source-file src="https://github.com/EddyVerbruggen/Custom-URL-scheme/blob/4.3.0/src/android/nl/xservices/plugins/LaunchMyApp.java" target-dir="https://github.com/EddyVerbruggen/Custom-URL-scheme/blob/4.3.0/src/nl/xservices/plugins"/>

    <config-file target="AndroidManifest.xml" parent="/manifest/application/activity">
      <intent-filter>
        <action android:name="android.intent.action.VIEW" />
        <category android:name="android.intent.category.DEFAULT" />
        <category android:name="android.intent.category.BROWSABLE" />
        <data android:scheme="$URL_SCHEME"/>
      </intent-filter>
      <intent-filter>
        <action android:name="android.intent.action.VIEW" />
        <category android:name="android.intent.category.DEFAULT" />
        <category android:name="android.intent.category.BROWSABLE" />
        <data android:scheme="$ANDROID_SCHEME"
              android:host="$ANDROID_HOST"
              android:pathPrefix="$ANDROID_PATHPREFIX" />
      </intent-filter>
    </config-file>
  </platform>

 

        
        
        
</plugin>
